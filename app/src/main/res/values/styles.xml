<resources>

    <!-- Base application theme. -->
    <style name="MyCustomAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/appColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyleMedium" parent="@android:style/Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mediumSize</item>
        <item name="android:fontFamily">droid_sans.ttf</item>
    </style>

    <style name="TextStyleSmall" parent="@android:style/Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smallSize</item>
        <item name="android:fontFamily">droid_sans.ttf</item>
    </style>

    <style name="TextStyleSmallBold" parent="@android:style/Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smallSize</item>
        <item name="android:fontFamily">droid_sans.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="EditTextStyleSmallNavHeaderWhite" parent="@android:style/Theme.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/smallSize</item>
        <item name="android:fontFamily">droid_sans.ttf</item>
        <item name="android:textColorHint">@color/gray90</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="EditTextStyleSmall" parent="@android:style/Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smallSize</item>
        <item name="android:fontFamily">droid_sans.ttf</item>
        <item name="android:textColorHint">@color/gray90</item>
    </style>

    <style name="EditTextStyleMedium" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mediumSize</item>
        <item name="android:layout_marginStart">@dimen/activity_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_end_margin</item>
        <item name="android:padding">@dimen/textPadding</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
        <item name="android:fontFamily">droid_sans.ttf</item>
    </style>

    <style name="MyCustomAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyCustomAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
