<resources>

    <!-- Base application theme. -->
    <style name="MyCustomAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/appColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomTextStyleMedium" parent="@android:style/Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mediumSize</item>
        <item name="android:fontFamily">ubuntu.ttf</item>
    </style>

    <style name="MyCustomTextStyleSmallLogoColor" parent="@android:style/Theme.Light">
        <item name="android:textColor">@color/logoColor</item>
        <item name="android:textSize">@dimen/smallSize</item>
        <item name="android:fontFamily">ubuntu.ttf</item>
        <item name="android:textColorHint">@color/wheat</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MyCustomTextStyleSmall" parent="@android:style/Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smallSize</item>
        <item name="android:fontFamily">ubuntu.ttf</item>
    </style>


    <style name="MyCustomEditTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mediumSize</item>
        <item name="android:layout_marginStart">@dimen/activity_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_end_margin</item>
        <item name="android:padding">@dimen/textPadding</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
        <item name="android:fontFamily">ubuntu.ttf</item>
    </style>

    <style name="MyCustomAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyCustomAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
