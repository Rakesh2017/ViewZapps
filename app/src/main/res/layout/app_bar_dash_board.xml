<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="enhabyto.com.viewzapps.DashBoard">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appColor"
        android:theme="@style/MyCustomAppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="40dp"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/appColor"
                app:popupTheme="@style/MyCustomAppTheme.PopupOverlay" />


            <TextView
                android:id="@+id/bar_zapsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MyCustomTextStyleSmallUbuntu"
                android:drawableStart="@drawable/viewz_app_bar_logo"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="00000"
                android:layout_marginEnd="12dp"
                android:textStyle="bold"
                android:drawablePadding="4dp"
                android:background="@drawable/rectangle_white_smoke"
                android:padding="2dp"
                android:elevation="@dimen/elevation"
                tools:targetApi="lollipop" />

            <ImageButton
                android:layout_toStartOf="@+id/bar_zapsTextView"
                android:layout_width="@dimen/appBarIcon"
                android:layout_height="@dimen/appBarIcon"
                android:layout_centerVertical="true"
                android:background="@drawable/log_out"
                tools:ignore="ContentDescription"
                android:layout_marginEnd="12dp"
                android:id="@+id/bar_logOut"
                android:elevation="10dp"
                tools:targetApi="lollipop" />


            <ImageButton
                android:layout_width="@dimen/appBarIcon"
                android:layout_height="@dimen/appBarIcon"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/bar_logOut"
                android:background="@drawable/switch_user"
                tools:ignore="ContentDescription"
                android:layout_marginEnd="12dp"
                android:elevation="10dp"
                tools:targetApi="lollipop" />





        </RelativeLayout>



    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_dash_board" />


</android.support.design.widget.CoordinatorLayout>
