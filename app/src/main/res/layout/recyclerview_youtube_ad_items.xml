<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    card_view:contentPadding="2dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardMaxElevation="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:background="@color/whiteSmoke"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dash_relativeLayout"
        android:background="@color/appColor"
        android:padding="@dimen/cardViewPadding">

        <util.android.textviews.FontTextView
            android:id="@+id/rya_titleTexxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyCustomTextStyleMedium"
            android:padding="@dimen/cardViewPadding"
            />
        
        <util.android.textviews.FontTextView
            android:id="@+id/rya_urlTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyCustomTextStyleSmall"
            android:layout_below="@+id/rya_titleTexxtView"
            android:textColor="@color/white"
            android:padding="@dimen/cardViewPadding"
            />

        
    </RelativeLayout>

</android.support.v7.widget.CardView>