<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appColor"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/padding2"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!--name-->

    <TextView
        android:id="@+id/header_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/NA"
        style="@style/EditTextStyleSmallNavHeaderWhite"
        android:layout_marginStart="@dimen/padding12"
        android:layout_marginEnd="@dimen/marginBetweenTags"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/padding8"
        />


    <!--email-->
    <TextView
        android:id="@+id/header_emailTextView"
        android:layout_below="@+id/header_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/NA"
        style="@style/EditTextStyleSmallNavHeaderWhite"
        android:layout_marginEnd="@dimen/marginBetweenTags"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/padding4"
        android:layout_alignStart="@+id/header_nameTextView"
        />

    <!--phone-->

    <TextView
        android:id="@+id/header_phoneTextView"
        android:layout_below="@+id/header_emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/NA"
        style="@style/EditTextStyleSmallNavHeaderWhite"
        android:layout_marginEnd="@dimen/marginBetweenTags"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/padding4"
        android:layout_alignStart="@+id/header_nameTextView"
        />

    <!--zaps-->
    <TextView
        android:id="@+id/header_zapTextView"
        android:layout_below="@+id/header_phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/NA"
        style="@style/EditTextStyleSmallNavHeaderWhite"
        android:layout_marginEnd="@dimen/marginBetweenTags"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/padding4"
        android:layout_alignStart="@+id/header_nameTextView"
        />



</RelativeLayout>
