<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appColor"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/header_appLogoImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/app_z"
        tools:ignore="ContentDescription,UnusedAttribute"
        android:elevation="@dimen/elevation"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />


    <!--name-->
    <util.android.textviews.FontTextView
        android:id="@+id/header_name1TextView"
        android:layout_toEndOf="@+id/header_appLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        style="@style/MyCustomTextStyleSmall"
        android:layout_marginStart="@dimen/activity_start_margin"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />

    <util.android.textviews.FontTextView
        android:id="@+id/header_nameTextView"
        android:layout_toEndOf="@+id/header_name1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/NA"
        style="@style/MyCustomTextStyleSmallNavHeaderWhite"
        android:layout_marginStart="@dimen/marginBetweenTags"
        android:layout_marginEnd="@dimen/marginBetweenTags"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />


    <!--email-->
    <util.android.textviews.FontTextView
        android:id="@+id/header_email1TextView"
        android:layout_toEndOf="@+id/header_appLogoImageView"
        android:layout_below="@+id/header_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        style="@style/MyCustomTextStyleSmall"
        android:layout_marginStart="@dimen/activity_start_margin"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        />

    <util.android.textviews.FontTextView
        android:id="@+id/header_emailTextView"
        android:layout_toEndOf="@+id/header_email1TextView"
        android:layout_below="@+id/header_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/NA"
        style="@style/MyCustomTextStyleSmallNavHeaderWhite"
        android:layout_marginStart="@dimen/marginBetweenTags"
        android:layout_marginEnd="@dimen/marginBetweenTags"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        />

    <!--phone-->
    <util.android.textviews.FontTextView
        android:id="@+id/header_phone1TextView"
        android:layout_toEndOf="@+id/header_appLogoImageView"
        android:layout_below="@+id/header_emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phoneNumber"
        style="@style/MyCustomTextStyleSmall"
        android:layout_marginStart="@dimen/activity_start_margin"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        />

    <util.android.textviews.FontTextView
        android:id="@+id/header_phoneTextView"
        android:layout_toEndOf="@+id/header_phone1TextView"
        android:layout_below="@+id/header_emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/NA"
        style="@style/MyCustomTextStyleSmallNavHeaderWhite"
        android:layout_marginStart="@dimen/marginBetweenTags"
        android:layout_marginEnd="@dimen/marginBetweenTags"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        />

    <!--phone-->
    <util.android.textviews.FontTextView
        android:id="@+id/header_zap1TextView"
        android:layout_toEndOf="@+id/header_appLogoImageView"
        android:layout_below="@+id/header_phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zapNumber"
        style="@style/MyCustomTextStyleSmall"
        android:layout_marginStart="@dimen/activity_start_margin"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        />

    <util.android.textviews.FontTextView
        android:id="@+id/header_zapTextView"
        android:layout_toEndOf="@+id/header_zap1TextView"
        android:layout_below="@+id/header_phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/NA"
        style="@style/MyCustomTextStyleSmallNavHeaderWhite"
        android:layout_marginStart="@dimen/marginBetweenTags"
        android:layout_marginEnd="@dimen/marginBetweenTags"
        android:fontFamily="ubuntu"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        />



</RelativeLayout>
